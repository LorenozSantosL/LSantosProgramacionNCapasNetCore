@model ML.Departamento;
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
        <h2>Usuarios</h2>
        <div class="row" >
            <div style="float:right">
               @Html.ActionLink("+", "Form", "Usuario", htmlAttributes: new { @class ="btn btn-success"})
            </div>
            
        </div>
        <hr />
        <div class="row">
            @*<div class="table-responsive">*@

                <table class="table ">
                    <thead>
                        <tr>
                            <!--<th>IdDepartamento</th>-->
                            <th>Nombre</th>
                       
                            @*<th>IdArea</th>*@
                            <th>NombreArea</th>
                          

                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (ML.Departamento departamento in Model.Departamentos)
                             {
                        <tr>
                            @*<td class="hidden">@usuario.IdUsuario</td>*@
                            <td>@departamento.Nombre</td>

                            @*<td class="hidden">@usuario.Rol.IdRol</td>*@
                            <td>@departamento.Area.Nombre</td>
                            
                       



                            <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form","Departamento", new { IdDepartamento = departamento.IdDepartamento})"></a></td>
                            <td class="text-center"><a class="btn btn-danger bi bi-trash3" href="@Url.Action("Delete","Departamento", new { IdDepartamento = departamento.IdDepartamento })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                             }
                    </tbody>
                </table>

            @*</div>*@
        </div>
    </div>


